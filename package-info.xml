		<remove-file name="$languagedir/SMFBenchmark.english.php" />
		<remove-file name="$languagedir/SMFBenchmark.russian.php" />
		<remove-file name="$languagedir/SMFBenchmark.russian-utf8.php" />
	</uninstall>
</package-info>